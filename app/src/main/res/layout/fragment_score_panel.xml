<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.cga.cariocapoints.ScorePanel"
    android:background="@mipmap/fondo">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView2"
            android:text="@string/puntajes_por_partida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textIsSelectable="false"
            android:typeface="serif"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/white"
            android:background="#94C337" />

        <TextView
            android:text="@string/seleccione_partida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/partidaSpinner"
            android:layout_margin="4dp"
            android:padding="12dp"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableLayout
                        android:id="@+id/ScoreTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:background="#E5FFB1"
                        android:isScrollContainer="true"
                        android:orientation="horizontal">

                    </TableLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
